# AI Home Security Notifications - Environment Variables
# Copy this file to .env and fill in your values

# System Configuration
DEBUG=false
LOG_LEVEL=INFO
CONFIG_FILE=config/system_config.yaml

# Paths
STORAGE_PATH=/home/security/security_data
MODEL_PATH=/home/security/security_data/models
DATABASE_URL=sqlite:///data/security.db

# Camera Settings
PI_CAMERA_INDEX=0
VIDEO_RESOLUTION=1920x1080
VIDEO_FPS=15

# AI Model Configuration
YOLO_MODEL_PATH=/home/security/models/yolov8s.pt
WHISPER_MODEL_SIZE=small
CONFIDENCE_THRESHOLD=0.5

# LLM Configuration (Optional)
LLM_ENABLED=false
LLM_MODEL_NAME=meta-llama/Llama-3.2-3B
LLM_FALLBACK=TinyLlama/TinyLlama-1.1B-Chat-v1.0

# Email Notification Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=user@example.com

# SMS Notification Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+1234567890

# Push Notification Configuration (Firebase)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_DEVICE_TOKEN=your_device_token

# Security
JWT_SECRET_KEY=your_secret_key_here_change_this
SESSION_TIMEOUT=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

